<div class="alert alert-info">

    <section id="loginForm">
        @using (Html.BeginForm("Index", "Tweets", new { ReturnUrl = ViewBag.ReturnUrl, area=string.Empty }, FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group text-center">
                <strong class="control-label">Enter twitter screen name:</strong>
            </div>
            <div class="form-group text-center">
                <input type="text" name="screenName" class="form-control" id="screen-name" placeholder="eminem"/>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Search" class="btn btn-lg btn-info" />
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}