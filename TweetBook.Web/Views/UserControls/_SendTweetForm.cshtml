<div class="alert alert-danger">

    <section id="loginForm">
        @using (Html.BeginForm("Send", "Tweets", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group text-center">
                <strong class="control-label"> Write what you think:</strong>
            </div>
            <div class="form-group text-center">
                <input type="text" name="tweet" class="form-control" id="screen-name" placeholder="It was a good day..."/>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Tweet" class="btn btn-lg btn-info" />
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}